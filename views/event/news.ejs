<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Events
        </h1>
        <form action="/events" method="POST">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="title"
              id="title"
              name="title"
              class="form-control"
              placeholder="Enter Title"
            />
          </div>
          <div class="form-group">
                  <label for="description" data-toggle="tooltip" title="280 maximum chars">Description</label>
                  <textarea class="form-control" id="description" name="description" rows="3" maxlength="280"
                    placeholder="Enter a short description of your event"></textarea>
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            <input
              type="date"
              id="date"
              name="date"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="time">Confirm Time</label>
            <input
              type="time"
              id="time"
              name="time"
              class="form-control"
            />
          </div>
          <div  class="form-group">
              <button type="submit" class="btn btn-primary btn-block">
                  Submit
                </button>
          </div>
        </form>
        <p class="lead mt-4">See all events? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
