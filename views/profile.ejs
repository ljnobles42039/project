<section class="about-me-section p-3 p-lg-5 theme-bg-light">
    <div class="container">
        <div class="profile-teaser media flex-column flex-lg-row">
            <div style="text-align: center" class="mr-5">
                <img id="mi_imagen" class="profile-image rounded-circle mx-auto mb-4" src="<%= user.img %>"
                    alt="Image profile" width="200px" height="240px">
                <!-- Button trigger modal -->
                <div class="mt-3">
                    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#imageModal">
                        Change image profile
                    </button>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Change image profile</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/profile/photo" method="post" enctype="multipart/form-data">
                                    <div class="custom-file" style="display: flex; text-align: left">
                                        <input type="file" class="custom-file-input mx-auto" id="photo" name="img" required>
                                        <label class="custom-file-label" for="photo">Change profile picture</label>
                                    </div>
                                    <div class="mt-3">
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end-modal -->
            </div>
            <div class=" media-body">
                <h2 class="name font-weight-bold mb-4"><%= user.name %></h2>
                <div class="bio mb-4">
                    <p id="user-description"><%= user.description %>
                </div>
            </div>
        </div>
    </div>
</section>